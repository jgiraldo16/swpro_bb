            nav#mainMenuContainer.collapse
                ul
                    li.active
                        a(href="urlCasa") Inicio
                    li
                        a(href="#") Servicios
                    li
                        a(href="#") Blog
                    li
                        a(href="#") Contacto

                .logins
                    a(href="https://www.swpro.com.co/login/", target="_blank").btn.btn-block.btn-secondary.btnIngresar Ingresar
                    a(href="http://cyrius.herokuapp.com/", target="_blank").btn.btn-block.btn-secondary.btnCyrius Cyrius
    
    .welcome-text.text-xs-center
        .container
            h2.display-4 Bienvenidos a Swpro

