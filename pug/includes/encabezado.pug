            a(href="urlCasa").logo
                img(src="images/logo.svg", alt="Logo Swpro")            

            button.btnSearch(type="button", data-toggle="collapse", data-target="#blockSearch", aria-expanded="false")
                i.fa.fa-search(aria-hidden="true")

            button.btnMenu(type="button", data-toggle="collapse", data-target="#mainMenuContainer", aria-expanded="false")
