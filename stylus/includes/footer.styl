@import 'variables.styl'

footer
    background azulOscuroBG
    padding 1rem
    color #fff

    
    img
        max-width 30%
        margin 1rem 0
    

    .listfooterMenu
        display flex
        list-style none
        padding 0
        margin 0 0 0 -0.5rem

        li
            margin .7rem

            a
                color #fff
                text-decoration none

                &:hover
                    color gris_2
    
    .suscribeFieldContainer
        display flex

        input[type="text"]
            border 0
            padding .7rem
            border-radius 5px 0 0 5px
            flex 1 0 auto

        input[type="submit"]
            background verdeMenta
            border 0
            border-radius 0 5px 5px 0
            color #fff
            padding .7rem
            flex 1 1 auto
            margin 0