@import 'variables.styl'

.welcome
    background url("../images/bgFront.jpg") no-repeat center top
    background-size cover
    color #fff
    display flex
    flex-direction column
    height 100vh

    .welcome-text
        align-items center
        display flex
        flex 1 1 auto

    .banner
        //background azulOscuroBG //Para quitar el fondo
        color #fff
        padding 1rem 0

        .container
            align-items center
            display flex
            flex-wrap wrap

            .logo
                img
                    width 175px

    .btnMenu, .btnSearch
        background transparent
        border 0
        color #fff
        font-size 2rem
        margin 0
        padding 0 .5rem

        &:focus
            outline 0

    .btnSearch
        margin-left auto
        margin-right .8rem

    #blockSearch
        flex 1 1 100%

    .blockSearchContainer
        display flex
        height 3rem
        margin 1rem 0

        input[type="text"]
            border 0
            border-radius 5px 0 0 5px
            padding 1rem

        input[type="submit"]
            background verdeMenta
            border 0
            border-radius 0 5px 5px 0  
            color #fff
            flex 1 1 auto

    nav#mainMenuContainer
        flex 1 1 100%

        ul
            list-style none
            margin 1rem 0 0 0
            padding 0
            
            a
                border-top 1px solid gris_2
                color gris_1
                display block
                padding .8rem 0
                text-align center
                text-decoration none

                &:hover
                    color verdeMenta 

            li.active
                a
                    color verdeMenta

.btn
    border 0
    color #fff
    transition all .5s ease

.btnAzul
    background azul

    &:hover
        background darken(azul, 10)
        color gris_1

.btnVerdeMenta
    background verdeMenta

    &:hover
        background darken(verdeMenta, 10)
        color gris_1